/* pages/studyList/seventh/index.wxss */
.container{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 10px;
  box-sizing: border-box;
}
.commodity-item{
  width: 48%;
  box-sizing: border-box;
  padding: 5px;
}
.commodity-box{
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 10px;
}
.commodity-image{
  width: 100%;
  box-shadow: 0px 3px 3px #ddd;
}
.commodity-title{
  width: 100%;
  height: 25px;
  line-height: 25px;
  font-size: 16px;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.commodity-detailed{
  width: 100%;
  display: flex;
  align-items: center;
  height: 20px;
  line-height: 20px;
}
.commodity-icon{
  font-size: 16px;
  color: #CC3333;
}
.commodity-price{
  font-size: 16px;
  color: #CC3333;
}
.commodity-visitors{
  font-size: 12px;
  color: #888;
}