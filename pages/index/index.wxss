/**index.wxss**/
.head{
  width: 100%;
  text-align: center;
  display: flex;
  flex-direction: columm;
}
.head image{
  width: 100%;
}
.banner-container{
  width: 100%;
}
.banner-image{
  width: 100%;
}
.menu-container{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 10px 0px;
  box-sizing: border-box;
}
.menu-item{
  width: 25%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 10px;
}
.menu-img{
  width: 60%;
}
.menu-text{
  width: 100%;
  height: 20px;
  line-height: 20px;
  font-size: 14px;
  color: #666;
  text-align: center
}
.nav-container{
  width: 100%;
  display: flex;
  height: 30px;
  line-height: 30px;
  box-shadow: 0px 5px 5px #ddd;
  align-items: center;
  text-align: left;
  padding: 0px 10px;
  font-size: 14px;
  background-color: #e9e9e9;
  box-sizing: border-box;
}
.nav-icon{
  width: 4px;
  height: 25px;
  border-radius: 2px;
  background-color: #0066CC;
}
.nav-content{
  flex: 1;
  padding: 0px 5px;
  box-sizing: border-box;
}
.nav-more{
  font-size: 12px;
  text-align: right;
  color: #0099CC;
}
.commodity-container{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 10px;
  box-sizing: border-box;
}
.commodity-item{
  width: 48%;
  box-sizing: border-box;
  padding: 5px;
}
.commodity-box{
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 10px;
}
.commodity-image{
  width: 100%;
  box-shadow: 0px 3px 3px #ddd;
}
.commodity-title{
  width: 100%;
  height: 25px;
  line-height: 25px;
  font-size: 16px;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.commodity-detailed{
  width: 100%;
  display: flex;
  align-items: center;
  height: 20px;
  line-height: 20px;
}
.commodity-icon{
  font-size: 16px;
  color: #CC3333;
}
.commodity-price{
  font-size: 16px;
  color: #CC3333;
  margin-right: 5px;
}
.commodity-visitors{
  font-size: 12px;
  color: #888;
}
.sale-container{
  width: 100%;
}
.sale-line{
  width: 100%;
  display: flex;
  height: 100px;
  padding: 10px;
  box-sizing: border-box;
  box-shadow: 0px 5px 5px #ddd;
}
.sale-head{
  width: 80px;
  height: 80px;
}
.sale-image{
  width: 100%;
  height: 100%;
}
.sale-content{
  width: 100%;
  flex: 1;
  height: 80px;
  padding: 0px 10px;
  box-sizing: border-box;
}
.sale-commodity-title{
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.sale-commodity-describe{
  width: 100%;
  height: 20px;
  line-height: 20px;
  font-size: 14px;
  color: #888;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.sale-commodity-num{
  width: 100%;
  height: 30px;
  line-height: 30px;
  display: flex;
}
.sale-number{
  font-size: 16px;
  color: #00CC00;
}
.sale-browse{
  font-size: 14px;
  color: #888;
  margin: 0px 5px;
}
.sale-price{
  font-size: 16px;
  color: #CC3333;
}
